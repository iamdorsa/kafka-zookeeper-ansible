[Unit]
Description=Zookeeper Daemon
Documentation=http://zookeeper.apache.org
Requires=network.target
After=network.target
[Service]
Type=forking
WorkingDirectory={{ zookeeper_installation }}/zookeeper
User={{ zookeeper_user }}
Group={{ zookeeper_group }}
ExecStart={{ zookeeper_installation }}/zookeeper/bin/zkServer.sh start {{ zookeeper_installation }}/zookeeper/conf/zoo.cfg
ExecStop={{ zookeeper_installation }}/zookeeper/bin/zkServer.sh stop {{ zookeeper_installation }}/zookeeper/conf/zoo.cfg
ExecReload={{ zookeeper_installation }}/zookeeper/bin/zkServer.sh restart {{ zookeeper_installation }}/zookeeper/conf/zoo.cfg
TimeoutSec=30
Restart=on-failure
[Install]
WantedBy=default.target